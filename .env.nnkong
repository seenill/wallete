# nnkong.asiayu 本地部署环境配置

# 域名配置
DOMAIN=nnkong.asiayu
API_DOMAIN=api.nnkong.asiayu
WWW_DOMAIN=www.nnkong.asiayu

# 服务器配置
SERVER_PORT=8087
GIN_MODE=release

# 安全配置（请修改为你的密钥）
JWT_SECRET=nnkong-asiayu-jwt-secret-key-change-this-in-production-32chars
ENCRYPTION_KEY=nnkong-asiayu-encryption-key-32ch

# 区块链网络配置
# 推荐使用付费RPC节点以获得更好性能
ETHEREUM_RPC_URL=https://eth.llamarpc.com
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed1.binance.org

# 如果你有Infura或Alchemy账号，推荐使用：
# ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
# POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID

# 速率限制配置
RATE_LIMIT_GENERAL=1000
RATE_LIMIT_TRANSACTION=50
RATE_LIMIT_AUTH=20

# SSL配置
SSL_CERT_PATH=/etc/letsencrypt/live/nnkong.asiayu/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/nnkong.asiayu/privkey.pem

# 日志配置
LOG_LEVEL=info
LOG_FILE=/var/log/wallet/app.log

# 备份配置
BACKUP_PATH=/opt/wallet/backup
BACKUP_RETENTION_DAYS=30