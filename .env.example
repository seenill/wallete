# 生产环境配置文件
# 复制此文件为 .env 并根据实际情况修改配置

# 服务器配置
SERVER_PORT=8087
GIN_MODE=release

# 安全配置（生产环境必须修改）
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
ENCRYPTION_KEY=your-encryption-key-change-in-production-exactly-32-chars

# 区块链网络配置（推荐使用付费节点以获得更好性能）
# 以太坊主网
ETHEREUM_RPC_URL=https://eth.llamarpc.com
# ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
# ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY

# Polygon主网
POLYGON_RPC_URL=https://polygon-rpc.com
# POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID

# BSC主网
BSC_RPC_URL=https://bsc-dataseed1.binance.org
# BSC_RPC_URL=https://speedy-nodes-nyc.moralis.io/YOUR_SPEED_NODE_ID/bsc/mainnet

# 速率限制配置
RATE_LIMIT_GENERAL=100
RATE_LIMIT_TRANSACTION=10
RATE_LIMIT_AUTH=5

# SSL配置（仅在使用HTTPS时需要）
SSL_CERT_PATH=/etc/ssl/certs/your-domain.pem
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# 域名配置
DOMAIN=your-domain.com

# 数据库配置（如果将来需要）
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=wallet
DB_SSLMODE=disable

# 日志配置
LOG_LEVEL=info
LOG_FILE=/var/log/wallet/app.log

# 备份配置
BACKUP_PATH=/opt/wallet/backup
BACKUP_RETENTION_DAYS=30